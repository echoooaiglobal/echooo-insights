{
  "manifest_version": 3,
  "name": "Echo Outreach Agent Extension",
  "version": "1.0.0",
  "description": "Connect with Echo Outreach Agent Dashboard for influencer outreach management",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:8000/*",
    "http://localhost:3000/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Echo Outreach Agent",
    "default_icon": {
      "16": "icons/echooo-favicon-16x16.png",
    "32": "icons/echooo-favicon-32x32.png", 
    "48": "icons/echooo-favicon-48x48.png",
    "128": "icons/echooo-favicon-128x128.png",
    "512": "icons/echooo-favicon-512x512.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/echooo-favicon-16x16.png",
    "32": "icons/echooo-favicon-32x32.png", 
    "48": "icons/echooo-favicon-48x48.png",
    "128": "icons/echooo-favicon-128x128.png",
    "512": "icons/echooo-favicon-512x512.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}